<Window x:Class="MethodicalService.Filters"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MethodicalService"
        mc:Ignorable="d"
        Title="Фильтры" Height="450" Width="600">
    <Grid>
        <GroupBox Header="Вид УПД" Margin="10,10,320,255" FontSize="14">
            <StackPanel Margin="0,0,0,5" Width="250">
                <RadioButton x:Name="radioUcheb" GroupName="type_UPD" Content="Учебная"></RadioButton>
                <RadioButton x:Name="radioType" GroupName="type_UPD" Content="Типовая"></RadioButton>

            </StackPanel>
        </GroupBox>
        <Button Content="Применить" HorizontalAlignment="Left" Margin="175,374,0,0" VerticalAlignment="Top" Height="30" Width="115" Background="#FF329A93" BorderThickness="10,10,10,10" BorderBrush="#FF329A93"/>
        <Button Content="Сбросить" HorizontalAlignment="Left" Margin="305,374,0,0" VerticalAlignment="Top" Height="30" Width="115" Background="#FFE0E0E0" Foreground="#FF329A93" BorderBrush="#FFE0E0E0" BorderThickness="10,10,10,10"/>

    </Grid>
</Window>
